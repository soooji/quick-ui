{
  "name": "quick-ui",
  "version": "0.0.1",
  "description": "A modern, lightweight UI component library built with Lit and Tailwind CSS.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "build:css": "tailwindcss -i ./src/styles/globals.css -o ./src/styles/output.css",
    "watch:css": "tailwindcss -i ./src/styles/globals.css -o ./src/styles/output.css --watch",
    "dev": "npm run watch:css & vite",
    "format": "prettier --write \"src/**/*.{js,ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,tsx}\""
  },
  "keywords": [],
  "devDependencies": {
    "@chromatic-com/storybook": "^1.9.0",
    "@storybook/addon-essentials": "^8.3.3",
    "@storybook/addon-links": "^8.3.3",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/blocks": "^8.3.3",
    "@storybook/test": "^8.3.3",
    "@storybook/web-components": "^8.3.3",
    "@storybook/web-components-vite": "^8.3.3",
    "@types/node": "^18.15.11",
    "autoprefixer": "^10.4.14",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "postcss": "^8.4.24",
    "prettier": "^3.3.3",
    "storybook": "^8.3.3",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.0.4",
    "vite": "^4.3.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/soooji/quick-ui.git"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "lit": "^2.7.0",
    "lit-html": "^3.2.0",
    "lucide-react": "^0.446.0",
    "tailwind-merge": "^2.5.2",
    "tailwindcss-animate": "^1.0.7"
  },
  "homepage": "https://github.com/soooji/quick-ui#readme",
  "author": "soooji <beheshtisajad@gmail.com>",
  "license": "MIT"
}
